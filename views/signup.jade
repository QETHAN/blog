extends html
append head
  link(rel='stylesheet',href='/blog_css/signin.css',type='text/css')
block body 
  .container
    form.form-signin(action='/signup',method='post')
      h2.form-signin-heading Please sign up
      input(type="text", class="input-block-level", id='email', name='email',placeholder="Email address")
      input(type="password", class="input-block-level", id='password', name='password', placeholder="Password")
      input(type="password", class="input-block-level", id='repassword', name='repassword', placeholder="Password Confirm")
        
      input.btn.btn-large.btn-primary(type="submit",value='Sign up') 
